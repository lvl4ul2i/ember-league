<div class="container">

<h1>Admin {{model.teams}}</h1>

<div class="row">
  <div class="col-lg-6 col-md-12">
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">General Settings</h3>
      </div>
      <div class="panel-body">
        {{partial "matches/form"}}
      </div>
    </div>
  </div>
  <div class="col-lg-6 col-md-12">
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">Live Settings</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-4 col-sm-12">
            <div class="text-center">
              <h2>{{model.team1Score}}</h2>
              <h3>{{model.team1Name}}</h3>
              <fieldset>
                <button {{action 'valueDown' 'team1Score'}} class="btn btn-danger btn-xs">{{ui-icon icon='minus'}}</button>
                <button {{action 'valueUp' 'team1Score'}} class="btn btn-danger btn-xs">{{ui-icon icon='plus'}}</button>
              </fieldset>
            </div>
          </div>
          <div class="col-md-4 col-sm-12">
            <div class="text-center">
              <h2>{{model.minutes}}</h2>
              <h3>Min</h3>
              <fieldset>
                <button {{action 'valueDown' 'minutes'}} class="btn btn-danger btn-xs">{{ui-icon icon='minus'}}</button>
                <button {{action 'valueUp' 'minutes'}} class="btn btn-danger btn-xs">{{ui-icon icon='plus'}}</button>
              </fieldset>
            </div>
          </div>
          <div class="col-md-4 col-sm-12">
            <div class="text-center">
              <h2>{{model.team2Score}}</h2>
              <h3>{{model.team2Name}}</h3>
              <fieldset>
                <button {{action 'valueDown' 'team2Score'}} class="btn btn-danger btn-xs">{{ui-icon icon='minus'}}</button>
                <button {{action 'valueUp' 'team2Score'}} class="btn btn-danger btn-xs">{{ui-icon icon='plus'}}</button>
              </fieldset>
            </div>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-12">
            <form class="form-horizontal">
              <div class="form-group">
                <label for="message" class="col-sm-2 control-label">
                  <small>Messages ({{model.messages.length}}):</small>
                </label>
                <div class="col-sm-10">
                  <div class="input-group">
                    {{input type="text" enter='saveMessage' value=message_text class="form-control" id="message"}}
                    <span class="input-group-btn">
                      <button {{action "saveMessage"}} class="btn btn-danger">Send</button>
                    </span>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

</div>
