<form {{action "save" on="submit"}} class="form-horizontal">
  <h2>{{errorMessage}}</h2>
  <div class="form-group">
    <label for="name1" class="col-sm-4 control-label">Team 1 Name:</label>
    <div class="col-sm-8">
      {{input value=model.team1Name class="form-control" id="name1"}}
    </div>
  </div>
  <div class="form-group">
    <label for="name2" class="col-sm-4 control-label">Team 2 Name:</label>
    <div class="col-sm-8">
      {{input value=model.team2Name class="form-control" id="name2"}}
    </div>
  </div>
  <div class="form-group">
    <label for="date" class="col-sm-4 control-label">Date:</label>
    <div class="col-sm-8">
      {{input value=model.date class="form-control" id="date"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <input type="submit" value="Save" class="btn btn-danger" />
      <button {{action "cancel"}} class="btn btn-danger">Cancel</button>
    </div>
  </div>
</form>
